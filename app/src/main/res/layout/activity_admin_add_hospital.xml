<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddHospitalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Hospital Page"
                android:textColor="@color/cardview_dark_background"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextHname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif-light"
                android:hint="Enter Hospital Name"
                android:inputType="text"
                android:textColorHint="#A0192133" />

            <EditText
                android:id="@+id/editTextHAddress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif-light"
                android:hint="Enter Hospital Address"
                android:inputType="textMultiLine"
                android:textColorHint="#A0192133" />

            <Spinner
                android:id="@+id/areaspinner"
                android:layout_width="match_parent"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:layout_height="40dp" />

            <Spinner
                android:id="@+id/speciliazationspinner"
                android:layout_width="match_parent"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/editEmailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif-light"
                android:hint="Enter Hospital Email Id"
                android:inputType="textEmailAddress"
                android:textColorHint="#A0192133" />

            <EditText
                android:id="@+id/editTextPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif-light"
                android:hint="Enter Hospital Phone Num"
                android:inputType="text|phone"
                android:textColorHint="#A0192133" />

            <Button
                android:id="@+id/newhospitalbutton"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Hospital" />

            <Button
                android:id="@+id/buttonGoback"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>